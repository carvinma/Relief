        <Label Content="in" Grid.Column="3" HorizontalAlignment="Left" Margin="0,16.183,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Button Content="Estimate" Grid.Column="1" HorizontalAlignment="Left" Margin="37.89,10,0,0" Grid.Row="3" VerticalAlignment="Top" Width="75"/>
