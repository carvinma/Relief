            <ColumnDefinition Width="67*"/>
            <ColumnDefinition Width="118*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Value Type:" Grid.Column="1" HorizontalAlignment="Left" Margin="23.012,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="89.878"/>
